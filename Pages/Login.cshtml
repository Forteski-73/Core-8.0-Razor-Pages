@page
@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Login - OXF</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons CDN (para os ícones dentro dos inputs) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        /* Fundo degradê */
        body {
            height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Container do formulário */
        .login-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.25);
            width: 320px;
            padding: 2.5rem 2rem;
            color: white;
        }

        /* Avatar no topo */
        .avatar {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem auto;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 40px;
            color: #4b3fbd;
        }

        /* Inputs com ícones */
        .input-group-text {
            background: rgba(255,255,255,0.25);
            border: none;
            color: #4b3fbd;
            border-radius: 8px 0 0 8px;
        }

        .form-control {
            border-radius: 0 8px 8px 0;
            border: none;
            background: rgba(255, 255, 255, 0.25);
            color: white;
        }

            .form-control::placeholder {
                color: #e0e0e0;
                opacity: 1;
            }

            .form-control:focus {
                background: rgba(255, 255, 255, 0.4);
                color: #222;
                box-shadow: none;
                border: none;
            }

        /* Checkbox e link lado a lado */
        .options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.9rem;
            margin-bottom: 1.5rem;
            color: #ddd;
        }

        .form-check-input {
            width: 18px;
            height: 18px;
            margin-right: 6px;
        }

        /* Botão de login */
        .btn-login {
            background-color: #4b3fbd;
            border: none;
            border-radius: 8px;
            padding: 12px;
            font-weight: 700;
            letter-spacing: 1.1px;
            transition: background-color 0.3s ease;
        }

            .btn-login:hover {
                background-color: #3a2e9c;
            }

        a {
            color: #e0e0e0;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            a:hover {
                color: white;
                text-decoration: underline;
            }

        /* Alert de erro */
        .alert-danger {
            background: rgba(255, 0, 0, 0.3);
            border: none;
            color: white;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .logo-img {
            max-width: 180px; 
            height: auto;
            display: block;
            margin: 0 auto; 
        }

        .login-card {
            padding: 1.5rem 2rem 2rem 2rem;
        }

        .btn-login {
            color: white !important;
        }

    </style>
</head>
<body>

    <div class="login-card">

        
        <img src="/img/oxford-porcelanas-logo.png" alt="Logo Oxford" class="logo-img" />
        

        <!--h4 class="text-center mb-4">Login</!--h4-->

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <form method="post" novalidate>
            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                <input type="text" name="Username" class="form-control" placeholder="Usuário" required />
            </div>

            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                <input type="password" name="Password" class="form-control" placeholder="Senha" required />
            </div>

            <div class="options small">
                <div class="form-check d-flex align-items-center">
                    <input class="form-check-input" type="checkbox" id="RememberMe" name="RememberMe" />
                    <label class="form-check-label" for="RememberMe">Lembrar-me</label>
                </div>
                <a href="/Account/ForgotPassword">Esqueceu a senha?</a>
            </div>

            <button type="submit" class="btn btn-login w-100">ENTRAR</button>
        </form>
    </div>

    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
