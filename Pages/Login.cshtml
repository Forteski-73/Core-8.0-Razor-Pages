@page
@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login - OXF</title>

    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
            background: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        a {
            color: #fff;
            text-decoration: none;
        }

        .login-card {
            background: #333;
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.7);
            padding: 2.5rem 2rem;
            width: 100%;
            max-width: 380px;
            color: #eee;
            border: 1px solid #444;
        }

        .logo-img {
            max-width: 200px;
            height: auto;
            display: block;
            margin: 0 auto 1.5rem;
            filter: brightness(0) invert(1);
        }

        .input-group-text {
            background: #555;
            border: none;
            color: #fff;
            border-radius: 0.375rem 0 0 0.375rem;
        }

        .form-control {
            border-radius: 0 0.375rem 0.375rem 0;
            border: none;
            background: #555;
            color: #eee;
        }

            .form-control::placeholder {
                color: #999;
                opacity: 1;
            }

            .form-control:focus {
                background: #444;
                color: #fff;
                box-shadow: none;
                border: none;
            }

        .btn-login {
            background-color: #4b3fbd;
            border: none;
            border-radius: 0.5rem;
            padding: 12px;
            font-weight: 700;
            letter-spacing: 1.1px;
            color: white !important;
            transition: background-color 0.3s ease;
        }

            .btn-login:hover {
                background-color: #3a2e9c;
            }

        .btn-olho {
            border: none;
            background: #555;
            color: #fff;
            width: 40px;
            border-radius: 0 0.375rem 0.375rem 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .btn-olho:focus {
                outline: none;
                box-shadow: none;
            }

        .alert-danger {
            background: rgb(230, 1, 30);
            border: none;
            color: white;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .text-danger {
            font-size: 0.8rem;
            margin-top: -8px;
            margin-bottom: 10px;
            color: #ff6b6b;
        }
    </style>
</head>
<body>
    <div class="container login-container">
        <div class="login-card">
            <img src="/img/oxford-logo-p.png" alt="Logo Oxford" class="logo-img" />

            <h2 class="text-center mb-4" style="font-weight: 300; letter-spacing: 1.5px;">
                Login
            </h2>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <form method="post" novalidate>
                @Html.AntiForgeryToken()

                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input asp-for="Username" class="form-control" placeholder="Usuário" />
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>

                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    <input asp-for="Password" id="passwordInput" type="password" class="form-control"
                           placeholder="Senha"
                           autocomplete="off"
                           spellcheck="false"
                           autocorrect="off" />
                    <button type="button" class="btn-olho" onclick="toggleSenha()">
                        <i id="iconeSenha" class="bi bi-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

                <div class="d-flex justify-content-between align-items-center small mb-3">
                    <div class="form-check d-flex align-items-center">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label ms-2">Lembrar-me</label>
                    </div>
                    <a href="/Account/ForgotPassword">Esqueceu a senha?</a>
                </div>

                <button type="submit" class="btn btn-login w-100">ENTRAR</button>

                <div class="text-center mt-3">
                    <a href="/Register">Cadastre-se</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        function toggleSenha() {
            const senhaInput = document.getElementById("passwordInput");
            const icone = document.getElementById("iconeSenha");
            if (senhaInput.type === "password") {
                senhaInput.type = "text";
                icone.classList.replace("bi-eye", "bi-eye-slash");
            } else {
                senhaInput.type = "password";
                icone.classList.replace("bi-eye-slash", "bi-eye");
            }
        }
    </script>

    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>