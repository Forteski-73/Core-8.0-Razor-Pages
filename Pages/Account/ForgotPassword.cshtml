@page
@model OXF.Pages.Account.ForgotPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Recuperar Senha - OXF</title>

    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .forgot-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.25);
            width: 320px;
            padding: 2.5rem 2rem;
            color: white;
        }

        .btn-submit {
            background-color: #4b3fbd;
            border: none;
            border-radius: 8px;
            padding: 12px;
            font-weight: 700;
            letter-spacing: 1.1px;
            color: white !important;
            width: 100%;
            transition: background-color 0.3s ease;
        }

            .btn-submit:hover {
                background-color: #3a2e9c;
            }

        a {
            color: #e0e0e0;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            a:hover {
                color: white;
                text-decoration: underline;
            }

        .alert-danger, .alert-success {
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="forgot-card">
        <h3 class="mb-4 text-center">Recuperar Senha</h3>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-success">@Model.Message</div>
        }
        else if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <form method="post" novalidate>
            <div class="mb-3">
                <label for="Email" class="form-label">Informe seu e-mail</label>
                <input type="email" name="Email" id="Email" class="form-control" placeholder="email@exemplo.com" required />
            </div>

            <button type="submit" class="btn-submit">Enviar link de recuperação</button>

            <div class="mt-3 text-center">
                <a href="/Login">Voltar para login</a>
            </div>
        </form>
    </div>
</body>
</html>
