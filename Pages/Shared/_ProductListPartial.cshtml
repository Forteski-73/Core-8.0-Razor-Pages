@model IEnumerable<OXF.Models.Product>

@foreach (var product in Model) // ou Model.Take(20)
{
    <div class="col-12 product-item"
         data-name="@product.ProductName"
         data-id="@product.ProductId"
         data-barcode="@product.Barcode">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body d-flex align-items-center">
                <img src="@(string.IsNullOrEmpty(product.ImageBase64) ? "/images/no-image.png" : product.ImageBase64)"
                     alt="@product.ProductName"
                     class="img-fluid rounded me-3"
                     style="width: 70px; height: 70px; object-fit: cover;" />

                <div class="flex-grow-1">
                    <h6 class="fw-bold mb-1 text-uppercase">@product.ProductName</h6>
                    <p class="text-muted mb-0">
                        <strong>Cód:</strong> @product.ProductId <br />
                        <strong>Barras:</strong> @product.Barcode
                    </p>
                </div>

                <div class="text-end">
                    <a asp-page="/Produto" asp-route-id="@product.ProductId"
                       class="btn btn-primary btn-sm rounded-pill px-3">
                        Detalhes <i class="bi bi-chevron-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
}