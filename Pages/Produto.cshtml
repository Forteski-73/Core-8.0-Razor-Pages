            background-color: transparent;
            border: none;
            cursor: pointer;
            z-index: 10;
        }

        .thumbnail-row {
            position: relative;
            margin: 1rem 0;
        }

        .thumb-container-horizontal {
            overflow-x: auto;
            white-space: nowrap;
            padding: 0 1rem;
            scroll-behavior: smooth;
        }

        .thumb-wrapper {
