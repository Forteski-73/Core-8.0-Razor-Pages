@page "{id?}"
@model ProdutoModel
@{
    ViewData["Title"] = "Produto";
}

<div class="container my-5">

    <!-- Nome do Produto no topo -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-uppercase fw-bold">@Model.Produto?.ProductName</h2>
        </div>
    </div>

    <!-- Abas expansíveis em coluna única -->
    <div class="row">
        <div class="col-12">

            <div class="info-tab expanded">
                <div class="info-header" onclick="toggleTab(this)">INFORMAÇÕES DE IMAGENS</div>
                <div class="info-content px-2 py-2 show">
                    <!-- Linha com Botões Embalagem e Paletização -->
                    <div class="row mb-3">
                        <div class="col-12 d-flex align-items-start mt-0">
                            <button class="btn btn-dark me-2 fw-semibold flex-fill" type="button">Embalagem</button>
                            <button class="btn btn-light border fw-semibold flex-fill" type="button">Paletização</button>
                        </div>
                    </div>

                    @if (Model.Imagens?.Any() == true)
                    {
                        <div class="d-flex">
                            <!-- Miniaturas -->
                            <div class="d-flex flex-column align-items-center me-3" style="max-height: 340px; overflow: hidden;">
                                <button class="btn btn-sm mb-1" onclick="scrollThumbnail(-1)">▲</button>
                                <div id="thumbContainer" style="overflow-y: auto; max-height: 280px; width: 80px;">
                                    @for (int i = 0; i < Model.Imagens.Count; i++)
                                    {
                                        var img = Model.Imagens[i];
                                        <img src="@img" class="img-thumbnail mb-2 thumbnail-img" style="cursor: pointer; width: 100%;" onclick="setMainImage('@img')" />
                                    }
                                </div>
                                <button class="btn btn-sm mt-1" onclick="scrollThumbnail(1)">▼</button>
                            </div>

                            <!-- Imagem principal -->
                            <div class="flex-grow-1 text-center">
                                <div class="zoom-container">
                                    <img id="mainImage" src="@Model.Imagens.First()" class="zoom-img" />
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Nenhuma imagem disponível.</p>
                    }
                </div>
            </div>

            <div class="info-tab">
                <div class="info-header" onclick="toggleTab(this)">INFORMAÇÕES DO PRODUTO</div>
                <div class="info-content px-2 py-2">
                    <div class="row border-bottom py-1">
                        <div class="col-5 fw-semibold">Código do Produto</div>
                        <div class="col-7">@Model.Produto?.ProductId</div>
                    </div>
                    <div class="row border-bottom py-1">
                        <div class="col-5 fw-semibold">Nome</div>
                        <div class="col-7">@Model.Produto?.ProductName</div>
                    </div>
                    <div class="row py-1">
                        <div class="col-5 fw-semibold">Código de Barras</div>
                        <div class="col-7">@Model.Produto?.Barcode</div>
                    </div>
                </div>
            </div>

            <div class="info-tab">
                <div class="info-header" onclick="toggleTab(this)">DIMENSÕES</div>
                <div class="info-content px-2 py-2">
                    <p>Em construção !!!</p>
                </div>
            </div>

            <div class="info-tab">
                <div class="info-header" onclick="toggleTab(this)">INFORMAÇÕES FISCAIS</div>
                <div class="info-content px-2 py-2">
                    <p>Em construção !!!</p>
                </div>
            </div>

            <div class="info-tab">
                <div class="info-header" onclick="toggleTab(this)">OXFORD</div>
                <div class="info-content px-2 py-2">
                    <p>Em construção !!!</p>
                </div>
            </div>

            <div class="info-tab">
                <div class="info-header" onclick="toggleTab(this)">BOM</div>
                <div class="info-content px-2 py-2">
                    <p>Em construção !!!</p>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <style>
        .zoom-container {
            position: relative;
            width: 100%;
            height: 400px;
            overflow: hidden;
            background-color: transparent;
        }

            .zoom-container:hover {
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.25);
            }

        .zoom-img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            transition: transform 0.1s ease;
            cursor: crosshair;
            transform-origin: center center;
        }

        .thumbnail-img.selected {
            border: 2px solid #007bff;
        }

        .img-thumbnail {
            border-radius: 0 !important;
        }

        .thumbnail-img {
            transition: transform 0.2s ease;
        }

            .thumbnail-img:hover {
                transform: scale(1.08);
                border: none !important;
                z-index: 2;
            }

        .info-tab {
            border: 1px solid #ddd;
            margin-bottom: 10px;
            border-radius: 4px;
            overflow: hidden;
            transition: all 0.3s ease;
            cursor: default;
        }

        .info-header {
            padding: 0.75rem 1rem;
            font-weight: 600;
            background-color: #e9ecef;
            cursor: pointer;
            user-select: none;
        }

        .info-content {
            max-height: 0;
            opacity: 0;
            transition: all 0.3s ease;
            padding: 0 1rem;
            overflow: hidden;
        }

            .info-tab.expanded .info-content,
            .info-content.show {
                max-height: 1500px;
                opacity: 1;
                padding-top: 0.75rem;
                padding-bottom: 0.75rem;
            }

        .btn-dark {
            background-color: #333;
            color: white;
            border-radius: 0;
            height: 40px;
            line-height: 1.2;
            padding-top: 0.25rem;
            padding-bottom: 0.25rem;
        }

        .btn-light {
            background-color: #f4f4f4;
            color: black;
            border-radius: 0;
            height: 40px;
            line-height: 1.2;
            padding-top: 0.25rem;
            padding-bottom: 0.25rem;
        }
    </style>

    <script>
        // Zoom da imagem principal
        const zoomContainer = document.querySelector('.zoom-container');
        const zoomImg = document.getElementById('mainImage');

        zoomContainer?.addEventListener('mousemove', function (e) {
            const bounds = zoomContainer.getBoundingClientRect();
            const x = e.clientX - bounds.left;
            const y = e.clientY - bounds.top;
            const percentX = x / bounds.width;
            const percentY = y / bounds.height;
            const offsetX = (percentX - 0.5) * 100;
            const offsetY = (percentY - 0.5) * 100;
            zoomImg.style.transform = `scale(2) translate(${-offsetX}%, ${-offsetY}%)`;
        });

        zoomContainer?.addEventListener('mouseleave', function () {
            zoomImg.style.transform = 'scale(1)';
        });

        // Trocar imagem principal ao clicar miniatura
        function setMainImage(url) {
            zoomImg.src = url;
            document.querySelectorAll('.thumbnail-img').forEach(img => {
                img.classList.remove("selected");
                if (img.src === url) {
                    img.classList.add("selected");
                }
            });
        }

        // Scroll das miniaturas
        function scrollThumbnail(direction) {
            const container = document.getElementById("thumbContainer");
            container.scrollBy({ top: direction * 80, behavior: 'smooth' });
        }

        // Toggle de abas: só permite uma expandida
        function toggleTab(header) {
            const tab = header.parentElement;
            const isExpanded = tab.classList.contains('expanded');

            // Fecha todas as abas
            document.querySelectorAll('.info-tab').forEach(t => t.classList.remove('expanded'));

            // Abre somente a clicada (se não estava aberta)
            if (!isExpanded) {
                tab.classList.add('expanded');
            }
        }
    </script>
}
